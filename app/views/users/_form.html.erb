<%= form_for obj do |f| %>
<div class="row">
  <div class="medium-6 columns">
    <%= f.label :username %>
    <%= f.text_field :username  %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= f.label :password %>
    <%= f.password_field :password  %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= f.submit(@user.new_record? ? "Register" : "Edit profile", class: "button") %>
  </div>
</div>
<% end %>