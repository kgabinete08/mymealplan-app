
<%= form_for obj do |f| %>
<div class="row">
  <div class="medium-6 columns">
    <%= f.label :title %>
    <%= f.text_field :title  %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= f.label :prep_time %>
    <%= f.text_field :prep_time %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients, rows: 5 %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= f.label :directions %>
    <%= f.text_area :directions, rows: 5 %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= f.submit(obj.new_record? ? "Add Recipe" : "Update Recipe", class: "button") %>
  </div>
</div>
<% end %>