<%= render 'shared/content_title', title: 'Log in' %>

<%= form_tag '/login' do %>
<div class="row">
  <div class="medium-6 columns">
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] || '' %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] || '' %>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <%= submit_tag("Log in", class: "button") %>
  </div>
</div>
<% end %>
