<% if obj.errors.any? %>
<div class="row">
  <div class="medium-10 columns">
    <div class="alert-box alert radius">
      <h5>Please fix the following errors: </h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>